@model IEnumerable<MSL_APP.Models.ProductName>

@{
    ViewData["Title"] = "Admin Home Page";
}

<h1>Admin Panel</h1>

<div class="row mb-3">
    <form asp-controller="ProductName" asp-action="UploadFile" method="post" asp-uploadType="productName"
          enctype="multipart/form-data" class="col-4">
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Upload Product Names
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <input class="btn btn-outline-secondary btm-sm" type="file" name="file" />
                <button class="btn btn-success btm-sm" type="submit">Upload File</button>
            </div>
        </div>
    </form>
    <form asp-controller="ProductKey" asp-action="UploadFile" method="post"
          enctype="multipart/form-data" class="col-4">
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Upload Product Keys
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <input class="btn btn-outline-secondary btm-sm" type="file" name="file" />
                <button class="btn btn-success btm-sm" type="submit">Upload File</button>
            </div>
        </div>
    </form>
    <form asp-controller="EligibleStudent" asp-action="UploadFile" method="post" asp-uploadType="productName"
          enctype="multipart/form-data" class="col-4">
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Upload Eligible Students
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <input class="btn btn-outline-secondary btm-sm" type="file" name="file" />
                <button class="btn btn-success btm-sm" type="submit">Upload File</button>
            </div>
        </div>
    </form>
</div>


<form asp-action="Admin">
    <div class="input-group mb-3 col-md-5">
        <input type="text" class="form-control" name="search" placeholder="Product Name" aria-label="Search Product" aria-describedby="button-addon2">
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-primary" id="searchProductButton">Search</button>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Product", "Admin", new { sortBy = ViewBag.SortByProduct })
                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th>
                @Html.ActionLink("Total Key", "Admin", new { sortBy = ViewBag.SortByTotalKeys })
            </th>
            <th>
                @Html.ActionLink("Available Key", "Admin", new { sortBy = ViewBag.SortByAvailableKeys })
            </th>
            <th>
                @Html.ActionLink("Used Key", "Admin", new { sortBy = ViewBag.SortByUsedKeys })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityLimit)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KeyCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RemainingKeyCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsedKeyCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityLimit)
                </td>
            </tr>
        }
    </tbody>
</table>








