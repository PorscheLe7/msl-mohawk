@*@model IEnumerable<MSL_APP.Models.ProductName>*@
@using MSL_APP.Utility
@model PaginatedList<MSL_APP.Models.ProductName>
@{
    ViewData["Title"] = "Admin Home Page";
}

<h1>Admin Panel</h1>

<div class="row">
    <div class="btn-group mb-3 col-md" role="group">

        <div class="btn-group" role="group">
            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Upload Product Names
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <form asp-controller="ProductName" asp-action="UploadFile" method="post" asp-uploadType="productName"
                      enctype="multipart/form-data" class="col-3">
                    <input class="btn btn-outline-secondary btm-sm" type="file" name="file" />
                    <button class="btn btn-success btm-sm" type="submit">Upload</button>

                </form>
            </div>
        </div>

        <div class="btn-group" role="group">
            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Upload Product Keys
            </button>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <form asp-controller="ProductKey" asp-action="UploadFile" method="post" asp-uploadType="productKey"
                      enctype="multipart/form-data" class="col-3">
                    <input class="btn btn-outline-secondary btm-sm" type="file" name="file" />
                    <button class="btn btn-success btm-sm" type="submit">Upload</button>
                </form>
            </div>
        </div>

        <div class="btn-group" role="group">
            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Upload Eligible Students
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <form asp-controller="EligibleStudent" asp-action="UploadFile" method="post" asp-uploadType="eligibleStudent"
                      enctype="multipart/form-data" class="col-3">
                    <input class="btn btn-outline-secondary btm-sm" type="file" name="file" />
                    <button class="btn btn-success btm-sm" type="submit">Upload</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md">
        <form asp-action="Admin">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="search" placeholder="Product Name" aria-label="Search Product" aria-describedby="button-addon2">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-primary" id="searchProductButton">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@
                <a asp-action="Admin" asp-route-sortBy="@ViewData["Product"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Product</a>
            </th>
            <th>
                <a asp-action="Admin" asp-route-sortBy="@ViewData["TotalKeys"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Total Key</a>
            </th>
            <th>
                <a asp-action="Admin" asp-route-sortBy="@ViewData["AvailableKeys"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Available Key</a>
            </th>
            <th>
                <a asp-action="Admin" asp-route-sortBy="@ViewData["UsedKeys"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Used Key</a>
            </th>
            <th>
                <a asp-action="Admin" asp-route-sortBy="@ViewData["Limit"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Quantity Limit</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KeyCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RemainingKeyCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsedKeyCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityLimit)
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "d-none" : "";
    var nextDisabled = !Model.HasNextPage ? "d-none" : "";
}
<a asp-action="Index"
   asp-route-sortBy="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortBy="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-primary @nextDisabled">
    Next
</a>






