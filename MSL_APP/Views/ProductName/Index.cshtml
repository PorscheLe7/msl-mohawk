@model IEnumerable<MSL_APP.Models.ProductName>

@{
    ViewData["Title"] = "Index";
}
<style>
    .dropdown-menu {padding:2px;}
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="ProductName" asp-action="UploadFile" method="post"
      enctype="multipart/form-data">
    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Upload Product Name CSV
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <input class="btn btn-outline-secondary btm-sm" type="file" name="file" />
            <button class="btn btn-success btm-sm" type="submit">Upload File</button>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KeyCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityLimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActiveStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DownloadLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KeyCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DownloadLink)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
