@model IEnumerable<MSL_APP.Models.EligibleStudent>

@{
    ViewData["Title"] = "Eligible Student";
}

<h1>Eligible Student</h1>

<div class="row">
    <div class="col-md">
        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
            <a type="button" class="btn btn-outline-primary" asp-action="Create">Create</a>
            <div class="btn-group" role="group">
                <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Upload Eligible Students
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <form asp-controller="EligibleStudent" asp-action="UploadFile" method="post"
                          enctype="multipart/form-data">
                        <input class="btn btn-outline-secondary btm-sm" type="file" name="file" />
                        <button class="btn btn-success btm-sm" type="submit">Upload</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md">
        <form asp-action="Index">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="search" placeholder="All Columns" aria-label="Search User">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-primary" id="searchUserButton">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.StudentID)*@
                @Html.ActionLink("ID", "Index", new { sortBy = ViewBag.SortByStudentId })
            </th>
            <th>
                @Html.ActionLink("First Name", "Index", new { sortBy = ViewBag.SortByStudentFirstName})
            </th>
            <th>
                @Html.ActionLink("Last Name", "Index", new { sortBy = ViewBag.SortByStudentLastName })
            </th>
            <th>
                @Html.ActionLink("Email", "Index", new { sortBy = ViewBag.SortByStudentEmail})
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
